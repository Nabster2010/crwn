		"url": "https://github.com/Nabster2010/crwn/issues"
	},
	"homepage": "https://github.com/Nabster2010/crwn#readme",
	"dependencies": {
		"body-parser": "^1.19.0",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"stripe": "^8.52.0"
	},
	"devDependencies": {
		"concurrently": "^5.2.0"
	}
}
